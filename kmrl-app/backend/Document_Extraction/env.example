# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Tesseract Configuration
# Linux/Mac:
TESSERACT_CMD=/usr/bin/tesseract
# Windows:
# TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe

# OCR Languages (Malayalam + English)
TESSERACT_LANGUAGES=mal+eng

# File Processing Limits
MAX_FILE_SIZE_MB=50
IMAGE_QUALITY_THRESHOLD=0.5
TEXT_DENSITY_THRESHOLD=0.3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT={time:YYYY-MM-DD HH:mm:ss} | {level} | {name}:{function}:{line} - {message}

# Database Configuration (optional)
DATABASE_URL=sqlite:///kmrl_documents.db

# MinIO/S3 Configuration (optional)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=kmrl-documents

# Processing Configuration
ENABLE_ENHANCEMENT=true
ENABLE_HUMAN_REVIEW=true
CONFIDENCE_THRESHOLD=0.7

# CAD Processing
ENABLE_DWG_CONVERSION=true
ENABLE_IGES_PROCESSING=true

# Language Support
SUPPORTED_LANGUAGES=en,ml,hi,ta,te,kn,gu,pa,or,as,bn
DEFAULT_LANGUAGE=en
